{
  "name": "atr-portfolio-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.3.3"
  },
  "lint-staged": {
    "apps/web/**/*.{js,ts,tsx,json,css}": [
      "bunx @biomejs/biome check --write --unsafe"
    ]
  },
  "packageManager": "bun@1.1.20",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
